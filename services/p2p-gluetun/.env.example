# P2P VPN stack (Gluetun + qBittorrent + Soulseek) (example)
# Copy to .env and fill in real values.

VPN_SERVICE_PROVIDER=custom
VPN_TYPE=wireguard
VPN_ENDPOINT_IP=200.0.100.10
VPN_ENDPOINT_PORT=51820

WIREGUARD_PUBLIC_KEY=CHANGE_ME_BASE64
WIREGUARD_PRIVATE_KEY=CHANGE_ME_BASE64
WIREGUARD_ADDRESSES=10.10.10.2/24

# Forwarded + app ports allowed through VPN
FIREWALL_VPN_INPUT_PORTS=6880,61122,61123

TZ=UTC
PUID=1000
PGID=1000
WEBUI_PORT=8081

# Gluetun volumes
GLUETUN_CONFIG_DIR=/path/to/gluetun

# qBittorrent volumes
QBITTORRENT_CONFIG_DIR=/path/to/qbittorrent/config
QBITTORRENT_DOWNLOADS_DIR=/path/to/qbittorrent/downloads
MEDIA_MUSIC_DIR=/path/to/media/music
MEDIA_MOVIES_DIR=/path/to/media/movies
MEDIA_SERIES_DIR=/path/to/media/series

# Soulseek volumes
SOULSEEK_APPDATA_DIR=/path/to/soulseek/appdata
SOULSEEK_DOWNLOADS_DIR=/path/to/soulseek/downloads
SOULSEEK_LOGS_DIR=/path/to/soulseek/logs
SOULSEEK_SHARED_DIR=/path/to/soulseek/shared

# Ports exposed on the gluetun container
GLUETUN_QBITTORRENT_WEBUI_PORT=8081
GLUETUN_VPN_PORT=6880
GLUETUN_SOULSEEK_WEBUI_PORT=6080
GLUETUN_SOULSEEK_LISTEN_PORT=61122
GLUETUN_SOULSEEK_OBFUSCATED_PORT=61123

# Internal container ports
QBITTORRENT_INTERNAL_PORT=8081
VPN_FORWARDED_PORT=6880
SOULSEEK_INTERNAL_WEBUI_PORT=6080
SOULSEEK_INTERNAL_LISTEN_PORT=61122
SOULSEEK_INTERNAL_OBFUSCATED_PORT=61123
