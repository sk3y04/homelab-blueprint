          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisLabel": "errors/sec",
            "drawStyle": "bars",
            "fillOpacity": 60,
            "gradientMode": "none",
            "lineWidth": 0,
            "pointSize": 5,
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "normal" }
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 29 },
      "id": 20,
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "multi" } },
      "title": "Error Rate by Container",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "expr": "sum by (container) (rate({container=~\"$container\"} |~ \"(?i)(error|fatal|panic|exception|crit)\" [$__auto]))",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
