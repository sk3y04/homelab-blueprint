        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      },
      "title": "Error Lines Only",
      "type": "logs",
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "expr": "{container=~\"$container\"} |~ \"(?i)(error|fatal|panic|exception|crit)\"",
