# Nextcloud configuration (example)
# Copy to .env and fill in real values.

# Database credentials (CHANGE THESE)
MYSQL_ROOT_PASSWORD=CHANGE_ME
MYSQL_PASSWORD=CHANGE_ME
MYSQL_DATABASE=nextcloud
MYSQL_USER=nextcloud
MARIADB_AUTO_UPGRADE=1
DB_TZ=UTC

# Redis password (CHANGE THIS)
REDIS_PASSWORD=CHANGE_ME

# Nextcloud settings
NEXTCLOUD_TRUSTED_DOMAINS=cloud.example.com localhost 127.0.0.1
NEXTCLOUD_PHP_MEMORY_LIMIT=512M
NEXTCLOUD_PHP_UPLOAD_LIMIT=10G
NEXTCLOUD_TZ=UTC

# Volumes
NEXTCLOUD_DB_DIR=/path/to/nextcloud/db
NEXTCLOUD_REDIS_DIR=/path/to/nextcloud/redis
NEXTCLOUD_DATA_DIR=/path/to/nextcloud/data
NEXTCLOUD_CONFIG_DIR=/path/to/nextcloud/config
NEXTCLOUD_CUSTOM_APPS_DIR=/path/to/nextcloud/custom_apps
NEXTCLOUD_THEMES_DIR=/path/to/nextcloud/themes
RAID_ROOT_DIR=/path/to/raid

# Ports
NEXTCLOUD_HTTP_PORT=80
